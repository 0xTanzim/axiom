<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) [%X{requestId:-main}] %cyan(%logger{20}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Axiom framework logging -->
    <logger name="io.axiom" level="DEBUG"/>

    <!-- Application logging -->
    <logger name="com.example.auth" level="DEBUG"/>

    <!-- Reduce noise from libraries -->
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <logger name="org.h2" level="WARN"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
