<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.axiom.examples</groupId>
    <artifactId>auth-api</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>Axiom Auth API Example</name>
    <description>Login, register, and data retrieval example demonstrating Axiom DX</description>

    <properties>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <maven.compiler.release>25</maven.compiler.release>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <!-- Axiom framework -->
        <axiom.version>0.1.0-SNAPSHOT</axiom.version>

        <!-- Lombok -->
        <lombok.version>1.18.42</lombok.version>

        <!-- Logging -->
        <slf4j.version>2.0.16</slf4j.version>
    </properties>

    <dependencies>
        <!-- Axiom Core + Server -->
        <dependency>
            <groupId>io.axiom</groupId>
            <artifactId>axiom-core</artifactId>
            <version>${axiom.version}</version>
        </dependency>
        <dependency>
            <groupId>io.axiom</groupId>
            <artifactId>axiom-server</artifactId>
            <version>${axiom.version}</version>
        </dependency>

        <!-- Axiom DI (for @Service, @Routes, etc.) -->
        <dependency>
            <groupId>io.axiom</groupId>
            <artifactId>axiom-di</artifactId>
            <version>${axiom.version}</version>
        </dependency>

        <!-- Axiom Config (for configuration) -->
        <dependency>
            <groupId>io.axiom</groupId>
            <artifactId>axiom-config</artifactId>
            <version>${axiom.version}</version>
        </dependency>

        <!-- Axiom Persistence (for database) -->
        <dependency>
            <groupId>io.axiom</groupId>
            <artifactId>axiom-persistence</artifactId>
            <version>${axiom.version}</version>
        </dependency>

        <!-- H2 Database (for examples) -->
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <version>2.2.224</version>
        </dependency>

        <!-- Lombok (OPTIONAL - user's choice) -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>${lombok.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- Logging implementation -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>${slf4j.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.13.0</version>
                <configuration>
                    <release>25</release>
                    <compilerArgs>
                        <arg>--enable-preview</arg>
                    </compilerArgs>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                            <version>${lombok.version}</version>
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <mainClass>io.axiom.examples.auth.Application</mainClass>
                    <arguments>
                        <argument>--enable-preview</argument>
                    </arguments>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
