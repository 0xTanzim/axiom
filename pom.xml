<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.github.0xtanzim</groupId>
    <artifactId>axiom-parent</artifactId>
    <version>0.1.0</version>
    <packaging>pom</packaging>

    <name>Axiom Framework</name>
    <description>A modern, DX-first Java web framework for building fast, explicit applications</description>
    <url>https://github.com/0xtanzim/axiom</url>

    <licenses>
        <license>
            <name>MIT License</name>
            <url>https://opensource.org/licenses/MIT</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <developers>
        <developer>
            <id>0xtanzim</id>
            <name>Tanzim</name>
            <url>https://github.com/0xtanzim</url>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git://github.com/0xtanzim/axiom.git</connection>
        <developerConnection>scm:git:ssh://github.com:0xtanzim/axiom.git</developerConnection>
        <url>https://github.com/0xtanzim/axiom</url>
    </scm>

    <!-- =========================================================================
         Simple Module Structure:

         - axiom-core (routing, config, DI, validation, server)
         - axiom-persistence + processor
         - axiom (THE ONE dependency users add)
         ========================================================================= -->
    <modules>
        <!-- Core Framework -->
        <module>axiom-core</module>

        <!-- Persistence (separate due to annotation processor) -->
        <module>axiom-persistence</module>
        <module>axiom-persistence-processor</module>

        <!-- THE package users add -->
        <module>axiom-framework</module>
    </modules>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>25</java.version>
        <junit.version>5.11.0</junit.version>
        <assertj.version>3.26.0</assertj.version>
    </properties>

    <build>
        <plugins>
            <!-- Source JAR (required for Maven Central) -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.3.1</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- Javadoc JAR (required for Maven Central) -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.7.0</version>
                <configuration>
                    <release>25</release>
                    <additionalOptions>--enable-preview</additionalOptions>
                    <doclint>none</doclint>
                </configuration>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <!-- Release profile for Maven Central publishing -->
        <profile>
            <id>release</id>
            <build>
                <plugins>
                    <!-- GPG Signing (required for Maven Central) -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>3.2.4</version>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- Central Publishing Plugin -->
                    <plugin>
                        <groupId>org.sonatype.central</groupId>
                        <artifactId>central-publishing-maven-plugin</artifactId>
                        <version>0.6.0</version>
                        <extensions>true</extensions>
                        <configuration>
                            <publishingServerId>central</publishingServerId>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
